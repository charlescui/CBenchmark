all: 
	(@macosx_deployment_target@cd src; make all)

clean:
	(@macosx_deployment_target@cd src; make clean)

install: all
	(@macosx_deployment_target@cd src; make install)

distclean: clean
	find . -name "Makefile" -exec rm {} \;
	/bin/rm -f                \
		config.h              \
		config.status         \
		config.cache          \
		config.log

